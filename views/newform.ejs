<script>
$(document).ready(function() {
  $.ajax({
    url: '/attachment-options?id=<%= id%>',
    type: 'GET',
    success: function(data) {
      data.forEach(function(option) {
        var checkbox = $('<input>')
          .attr('type', 'checkbox')
          .attr('name', 'attachments')
          .attr('value', option.attaid);
        var label = $('<label>').text(option.attaname);

        $('#attachment-dropdown').append(
          $('<li>').append(
            $('<div>')
              .addClass('dropdown-item')
              .append(checkbox)
              .append(label)
          )
        );
      });
    },
    error: function() {
      console.error('Error fetching attachment options');
    }
  });
});
</script>
